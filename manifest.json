{
  "name": "Capture Screenshot",
  "description": "Bare minimum addon to capture a webpage screenshot",
  "homepage_url": "https://github.com/arunelias/capture-screenshot",
  "version": "2.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Capture Screenshot",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
